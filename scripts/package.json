{
  "name": "beaker-ng",
  "version": "2.0.0",
  "devDependencies": {
    "browserify": "^16.0.0",
    "electron": "11.5.0",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.1.1",
    "eslint": "^4.5.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "fs-jetpack": "^1.3.1",
    "fs-reverse": "0.0.3",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^4.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.9",
    "into-stream": "^2.0.1",
    "node-gyp": "^8.4.1",
    "pre-commit": "^1.2.2",
    "q": "^1.4.1",
    "rollup": "^1.23.0",
    "yargs": "^4.2.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.6",
    "rcedit": "^0.5.0"
  },
  "build": {
    "afterSign": "./afterSignHook.js",
    "appId": "com.bluelinklabs.beaker-browser",
    "asar": false,
    "asarUnpack": [
      "./fg/json-renderer/index.build.js",
      "./fg/syntax-highlighter/index.js",
      "./node_modules/@beaker/dat-legacy-tools/**",
      "./node_modules/sodium-native/**",
      "./node_modules/hyperdrive-daemon/**"
    ],
    "copyright": "Â© 2023 Alex313031 & Blue Link Labs",
    "directories": {
      "app": "../app",
      "buildResources": "../build",
      "output": "../dist"
    },
    "npmRebuild": false,
    "protocols": [
      {
        "name": "URL",
        "schemes": [
          "http",
          "https"
        ]
      },
      {
        "name": "hyper",
        "schemes": [
          "hyper"
        ]
      },
      {
        "name": "dat",
        "schemes": [
          "dat"
        ]
      }
    ],
    "appImage": {
      "category": "Network",
      "desktop": {
        "Name": "Beaker Browser",
        "GenericName": "Web Browser",
        "Type": "Application",
        "Terminal": false,
        "MimeType": "text/html;text/xml;application/xhtml+xml;application/xml;application/rss+xml;application/rdf+xml;image/gif;image/jpeg;image/png;x-scheme-handler/http;x-scheme-handler/https;x-scheme-handler/hyper;x-scheme-handler/dat;video/webm;application/x-xpinstall;",
        "Categories": "GNOME;GTK;Network;WebBrowser;"
      }
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "type": "distribution",
      "entitlements": "../build/entitlements.plist",
      "entitlementsInherit": "../build/entitlements.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to record video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      }
    },
    "publish": {
      "provider": "github"
    }
  },
  "scripts": {
    "postinstall": "cd ../app && npm install && cd bg/dat/converter && npm install",
    "build": "gulp build",
    "burnthemall": "node ./tasks/burnthemall.js",
    "lint": "eslint --ignore-pattern 'color-thief.js' --ignore-pattern 'app/node_modules' --ignore-pattern 'vendor' --ignore-pattern '*.build.js' --ignore-pattern 'assets' --fix app",
    "rebuild": "gulp rebuild",
    "release": "electron-builder --dir -p never && gulp postbuild",
    "start": "gulp start",
    "watch": "gulp start-watch"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/beaker",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alex313031/beaker-ng"
  },
  "bugs": {
    "url": "https://github.com/Alex313031/beaker-ng/issues"
  },
  "homepage": "https://github.com/Alex313031/beaker-ng",
  "dependencies": {
    "asar": "^3.0.2",
    "electron-updater": "^5.0.0",
    "fs-extra": "^10.1.0",
    "fs.promises": "^0.1.2",
    "sqlite3": "^5.1.2"
  }
}
